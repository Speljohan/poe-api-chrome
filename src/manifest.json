{
    "manifest_version": 2,

    "name": "POE Data Extension",
    "description": "Feeds Path of Exile data to a given external website.",
    "version": "1.0",

    "permissions": ["http://www.pathofexile.com/*","http://webcdn.pathofexile.com/*", "clipboardWrite", "clipboardRead", "unlimitedStorage", "background"],

    "background": {
        "scripts": [ "background.js"]
    },

    "externally_connectable": {
        "matches": ["http://localhost:3000/*"]
    }
}